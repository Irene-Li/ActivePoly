def convert_params(params): 
    J = np.array([[-params[0], params[2]], [-params[3], -params[1]]])
    B = np.diagflat(params[4:6])**2 
    c = params[3]/params[0] 
    B[1, 1] += c*c*B[0, 0] 
    B[1, 0] = c*B[0, 0]
    B[0, 1] = B[1, 0] 
    return J, B 





